
@{
    ViewData["Title"] = "Login";
}

		<!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <div class="breadcrumb__option">
                            <a  asp-controller="Home" asp-action="Index">Trang chủ</a>
                            <span>Đăng nhập</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
	<section class="product spad">
		<div class="container">
            <div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
                    <div id="login" class="user_box">
                        <div class="errorMessage">@ViewBag.Error</div>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "alert aleart-danger" })
                        <h1 class="account-title">Đăng Nhập</h1>
                        <form accept-charset="UTF-8" asp-controller="Account" asp-action="DoLogin" id="create_customer" method="post" name="loginForm">
                            <div class="clearfix large_form m-b-15">
                                <label class="label icon-field"><i class="fa fa-envelope-o" aria-hidden="true"></i></label>
                                <input required="" type="text" value="" placeholder="Tên đăng nhập hoặc Email" name="Email" id=usernameEmail class="text" size="45" autofocus>
                            </div>
                            <div class="clearfix large_form m-b-15">
                                <label class="label icon-field"><i class="fa fa-lock" aria-hidden="true"></i></label>
                                <input required="" type="password" value="" placeholder="Mật khẩu" name="Password" id="password" class="password text" size="30">
                            </div>
                            <div class="action_bottom m-b-15">
                                <input class="btn btn-signin" type="submit" value="Đăng nhập">
                            </div>
                            <div class="req_pass text-center">
                                <a asp-controller="Account" asp-action="Register" title="Đăng ký">Chưa có tài khoản? Đăng ký</a>
                            </div>
                            <div class="req_pass text-center">
                                <a asp-controller="Account" asp-action="ForgotPassword">Quên mật khẩu?</a>
                            </div>
                        </form>
                        <div class="face-btn" id="btn-facebook-login">
                            <img src="//theme.hstatic.net/1000230642/1000679613/14/fb-btn.png?v=1056" alt="google login - bitis">
                            <span>Đăng nhập bằng Facebook</span>
                        </div>
                        <div class="google-btn" id="btn-google-login">
                            <img src="//theme.hstatic.net/1000230642/1000679613/14/google-btn.png?v=1056" alt="google login - bitis">
                            <span>Đăng nhập bằng Google</span>
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</section>


	

