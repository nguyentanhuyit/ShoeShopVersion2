
@{ ViewData["Title"] = "Forgot Password"; }

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Quên mật khẩu</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div id="login" class="user_box">
                    <h1 class="account-title">Quên mật khẩu</h1>
                    <div class="text-success">@ViewBag.Success</div>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert aleart-danger" })
                    <form accept-charset="UTF-8" asp-controller="Account" asp-action="DoForgotPassword" id="create_customer" method="post" name="forgotPassForm">

                        <div class="clearfix large_form m-b-15">
                            <label class="label icon-field"><i class="fa fa-envelope-o" aria-hidden="true"></i></label>
                            <input required="" type="text" value="" placeholder="Email" name="Email" id=email class="text" size="30" autofocus>
                        </div>
                        <div class="action_bottom m-b-15">
                            <input class="btn btn-signin" type="submit" value="Tiếp tục">
                        </div>
                        <div class="req_pass text-center">
                            <a asp-controller="Account" asp-action="Login" title="Đăng nhập">Quay lại</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>




