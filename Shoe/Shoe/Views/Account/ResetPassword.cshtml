
@{ ViewData["Title"] = "Reset Password";
    }

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Đặt lại mật khẩu</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div id="login" class="user_box">
                    <h1 class="account-title">Đặt lại mật khẩu</h1>
                    <div class="text-success">@ViewBag.Success</div>
                    <div class="errorMessage">@ViewBag.Error</div>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert aleart-danger" })
                    <form accept-charset="UTF-8" asp-controller="Account" asp-action="DoResetPassword" id="create_customer" method="post" name="resetPassForm">

                        <div class="clearfix large_form m-b-15">
                            <label class="label icon-field"><i class="fa fa-lock" aria-hidden="true"></i></label>
                            <input required="" type="text" value="" placeholder="Nhập OTP" name="ResetPassCode" id="resetPassCode" class="text" size="6" autofocus>
                        </div>
                        <div class="clearfix large_form m-b-15">
                            <label class="label icon-field"><i class="fa fa-lock" aria-hidden="true"></i></label>
                            <input required="" type="password" value="" placeholder="Mật khẩu mới" name="Password" id="password" class="password text" size="30">
                        </div>
                        <div class="clearfix large_form m-b-15">
                            <label class="label icon-field"><i class="fa fa-lock" aria-hidden="true"></i></label>
                            <input required="" type="password" value="" placeholder="Nhập lại mật khẩu" name="ConfirmPassword" id="confirmPassword" class="password text" size="30">
                        </div>
                        <div class="action_bottom m-b-15">
                            <input class="btn btn-signin" type="submit" value="Xác nhận">
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</section>




