
@{
    ViewData["Title"] = "Purchase";
}
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Đơn mua</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Profile Section Begin -->
<section class="profile-section profile">
    <div class="container">
        <div class="row">
            <div class="left-menu">
                <div class="profile">
                    <img src="~/user/img/avatar/avatar_default.jpg" alt="Profile">
                    <div class="profile-name">@ViewBag.username</div>
                </div>
                <div class="profile-menu">
                    <ul>
                        <li>
                            <ul>
                                <li><a asp-controller="Account" asp-action="Profile">Thông tin tài khoản</a></li>
                                <li><a asp-controller="Account" asp-action="ChangePassword">Đổi mật khẩu</a></li>
                                <li><a asp-controller="Account" asp-action="Purchase">Đơn mua</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="my-purchase">
                <div class="profile-header">
                    <h3>Đơn hàng của tôi</h3>
                    <hr>
                </div>
                <div class="purchase-form">
                    <table>
                        <thead>
                            <tr>
                                <td>Mã đơn hàng</td>
                                <td>Ngày mua</td>
                                <td>Sản phẩm</td>
                                <td>Tổng tiền</td>
                                <td>Trạng thái đơn hàng</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in ViewBag.orderList){
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.DateCreated</td>
                                <td>Giày Thể Thao Nam MWC NATT</td>
                                <td>@item.TotalPrice</td>
                                @if(item.Status == 1){
                                <td>Đang xác nhận</td>
                                }
                                @if(item.Status == 2){
                                <td>Đang giao hàng</td>
                                }
                                @if(item.Status == 3){
                                <td>Đã giao hàng</td>
                                }
                                @if(item.Status == 4){
                                <td>Đã hủy</td>
                                }
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Profile Section End -->

